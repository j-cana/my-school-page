<style>
  .gold-placeholder::placeholder {
    color: #bfa300;
    font-style: italic;
    opacity: 0.8; 
    letter-spacing: 0.5px;
  }

  .btn-round-gold {
    background-color: #ffce1b;
    color: black;
    border: none;
    padding: 10px 25px;
    border-radius: 50px;
    font-size: 18px;
    font-weight: bold;
    box-shadow: 0 4px 10px rgba(0,0,0,0.2);
    transition: 0.3s ease;
    text-decoration: none;
    display: inline-block;
  }

  .btn-round-gold:hover {
    background-color: black;
    color: #ffce1b;
    transform: scale(1.05);
  }
</style>

<h1 class="page-title text-center" style="background-color: #ffce1b; color: black;">
  <%= subject.new_record? ? "CREATE SUBJECT" : "EDIT SUBJECT" %>
</h1>

<div class="card mb-4 shadow-sm" style="border-color: #ffce1b; border-width: 2px;">
  <div class="card-header text-center" style="background-color: black; color: #ffce1b;">
    <h4 class="mb-0"><%= @subject.name.present? ? @subject.name : "New Subject" %></h4>
  </div>

  <div class="card-body" style="background-color: black; color: #ffce1b;">
    <%= form_with(model: subject) do |form| %>
      <% if subject.errors.any? %>
        <div class="alert alert-danger">
          <strong><%= pluralize(subject.errors.count, "error") %> prevented this subject from being saved:</strong>
          <ul class="mb-0">
            <% subject.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= form.label :name, class: "form-label fw-bold", style: "color: #ffce1b;" %>
        <%= form.text_field :name,
              class: "form-control gold-placeholder",
              style: "background-color: black; color: #ffce1b; border-color: #ffce1b;",
              placeholder: "Enter subject name" %>
      </div>

      <div class="mb-3">
        <%= form.label :teacher_id, "Teacher", class: "form-label fw-bold", style: "color: #ffce1b;" %>
        <%= form.collection_select :teacher_id, Teacher.all, :id, :name,
              { prompt: "Select a teacher" },
              { class: "form-select", style: "background-color: black; color: #ffce1b; border-color: #ffce1b;" } %>
      </div>

      <div class="mb-3">
        <%= form.label :number_of_units, class: "form-label fw-bold", style: "color: #ffce1b;" %>
        <%= form.text_field :number_of_units,
              class: "form-control gold-placeholder",
              style: "background-color: black; color: #ffce1b; border-color: #ffce1b;",
              placeholder: "Enter number of units" %>
      </div>

      <div class="action-buttons" style="display: flex; justify-content: flex-end; gap: 10px; margin-top: 20px;">
        <%= form.submit(subject.new_record? ? "Create Subject" : "Update Subject", class: "btn-round-gold") %>
      </div>
    <% end %>
  </div>
</div>