<% content_for :title, "Editing subject" %>

<style>
  .btn-round-gold {
    background-color: #ffce1b;
    color: black;
    border: none;
    padding: 10px 25px;
    border-radius: 50px;
    font-size: 18px;
    font-weight: bold;
    box-shadow: 0 4px 10px rgba(0,0,0,0.2);
    transition: 0.3s ease;
    text-decoration: none;
  }

  .btn-round-gold:hover {
    background-color: black;
    color: #ffce1b;
    transform: scale(1.05);
  }
</style>

<%= render "form", subject: @subject %>

<br>

<div class="action-buttons" style="display: flex; gap: 10px; justify-content: flex-start;">
  <%= link_to "Show this subject", @subject, class: "btn-round-gold" %>
  <%= link_to "Back to subjects", subjects_path, class: "btn-round-gold" %>
</div>