<style>
  .gold-placeholder::placeholder {
    color: #bfa300;
    font-style: italic;
    opacity: 0.8;
  }

  .btn-round-gold {
    background-color: #ffce1b;
    color: black;
    border: none;
    padding: 10px 25px;
    border-radius: 50px;
    font-size: 18px;
    font-weight: bold;
    box-shadow: 0 4px 10px rgba(0,0,0,0.2);
    transition: 0.3s ease;
    text-decoration: none;
    display: inline-block;
  }

  .btn-round-gold:hover {
    background-color: black;
    color: #ffce1b;
    transform: scale(1.05);
  }
</style>

<h1 class="page-title text-center" style="background-color: #ffce1b; color: black;">
  <%= classlist.new_record? ? "CREATE CLASSLIST" : "EDIT CLASSLIST" %>
</h1>

<div class="card mb-4 shadow-sm" style="border-color: #ffce1b; border-width: 2px;">
  <div class="card-header text-center" style="background-color: black; color: #ffce1b;">
    <h4 class="mb-0"><%= @classlist.id ? "Classlist ##{@classlist.id}" : "New Classlist" %></h4>
  </div>

  <div class="card-body" style="background-color: black; color: #ffce1b;">
    <%= form_with(model: classlist) do |form| %>
      <% if classlist.errors.any? %>
        <div class="alert alert-danger">
          <strong><%= pluralize(classlist.errors.count, "error") %> prevented this classlist from being saved:</strong>
          <ul class="mb-0">
            <% classlist.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= form.label :student_id, "Student", class: "form-label fw-bold", style: "color: #ffce1b;" %>
        <%= form.collection_select :student_id, Student.all, :id, :name,
              { prompt: "Select a student" },
              { class: "form-select", style: "background-color: black; color: #ffce1b; border-color: #ffce1b;" } %>
      </div>

      <div class="mb-3">
        <%= form.label :section_id, "Section", class: "form-label fw-bold", style: "color: #ffce1b;" %>
        <%= form.collection_select :section_id, Section.all, :id, :name,
              { prompt: "Select a section" },
              { class: "form-select", style: "background-color: black; color: #ffce1b; border-color: #ffce1b;" } %>
      </div>

      <div class="action-buttons" style="display: flex; justify-content: flex-end; margin-top: 20px;">
        <%= form.submit(classlist.new_record? ? "Create Classlist" : "Update Classlist", class: "btn-round-gold") %>
      </div>
    <% end %>
  </div>
</div>
