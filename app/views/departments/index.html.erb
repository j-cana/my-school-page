<% content_for :title, "Departments" %>

<style>
.page-title {
  background-color: #ffce1b;
  color: #000000;
  padding: 12px 20px;
  font-weight: bold;
}

.btn-gxyy {
  background-color: none;
  border-color: #ffce1b;
  border-width: 2px;
  color: black;
  padding: 6px 10px;
  border-radius: 10px;
  font-size: 18px;
  font-weight: bold;
  box-shadow: 0 4px 10px rgba(0,0,0,0.2);
  transition: all 0.3s ease;
}

.btn-gxyy:hover {
  background-color: black;
  color: #ffce1b;
  transform: scale(1.05);
}

.btn-des {
  background-color: #ff4747;
  color: white;
  border: none;
  padding: 6px 6px;
  border-radius: 30px;
  font-size: 18px;
  font-weight: bold;
  box-shadow: 0 4px 10px rgba(0,0,0,0.2);
  transition: all 0.3s ease;
}

.btn-des:hover {
  background-color: black;
  color: #ff4747;
  transform: scale(1.05);
}

.btn-gxgg {
  background-color: #ffce1b;
  color: black;
  border: none;
  padding: 12px 25px;
  border-radius: 30px;
  font-size: 18px;
  font-weight: bold;
  box-shadow: 0 4px 10px rgba(0,0,0,0.2);
  transition: all 0.3s ease;
}

.btn-gxgg:hover {
  background-color: black;
  color: #ffce1b;
  transform: scale(1.05);
}

.action-buttons {
  margin-top: 20px;
  display: flex;
  gap: 15px;
  flex-wrap: wrap;
}

.table{
  background-color: #000;
  color: #ffce1b;
  border: 1px solid #ffce1b;
  text-align: center;
  vertical-align: middle;
}


.table th {
  background-color: #1a1a1a;
  color: #ffd700;
  font-weight: bold;
  border-bottom: 2px solid #ffce1b;
}

.table td {
  border-color: #333;
}

.table tr:hover {
  background-color: #111;
  color: #ffd700;
  transition: 0.2s;
}

.action-buttons {
  margin-top: 20px;
  display: flex;
  gap: 15px;
  flex-wrap: wrap;
}
</style>

<h1 class="page-title text-center">DEPARTMENTS</h1>

<table class ="table table-light table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
    </tr>
  </thead>
  <tbody>
    <% @departments.each do | department | %>
      <tr>
        <td><%= department.name %></td>
        <td><%= department.location %></td>
        <td><%= link_to "Show this department ", department, class: "btn btn-gxyy" %></td>
        <td><%= link_to " Edit ", edit_department_path(department), class: "btn btn-gxyy" %></td>
        <td><%= button_to "Destroy", department, method: :delete , class: "btn btn-des "%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New department", new_department_path, class: "btn btn-gxgg" %>
