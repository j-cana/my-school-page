<style>
  .gold-placeholder::placeholder {
    color: #bfa300;
    font-style: italic;
    opacity: 0.8; 
    letter-spacing: 0.5px;
  }

  .btn-round-gold {
    background-color: #ffce1b;
    color: black;
    border: none;
    padding: 10px 25px;
    border-radius: 50px;
    font-size: 18px;
    font-weight: bold;
    box-shadow: 0 4px 10px rgba(0,0,0,0.2);
    transition: 0.3s ease;
    text-decoration: none;
    display: inline-block;
  }

  .btn-round-gold:hover {
    background-color: black;
    color: #ffce1b;
    transform: scale(1.05);
  }
</style>

<h1 class="page-title text-center" style="background-color: #ffce1b; color: black;">
  <%= section.new_record? ? "CREATE SECTION" : "EDIT SECTION" %>
</h1>

<div class="card mb-4 shadow-sm" style="border-color: #ffce1b; border-width: 2px;">
  <div class="card-header text-center" style="background-color: black; color: #ffce1b;">
    <h4 class="mb-0"><%= @section.name.present? ? @section.name : "New Section" %></h4>
  </div>

  <div class="card-body" style="background-color: black; color: #ffce1b;">
    <%= form_with(model: section) do |form| %>
      <% if section.errors.any? %>
        <div class="alert alert-danger">
          <strong><%= pluralize(section.errors.count, "error") %> prevented this section from being saved:</strong>
          <ul class="mb-0">
            <% section.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= form.label :name, class: "form-label fw-bold", style: "color: #ffce1b;" %>
        <%= form.text_field :name,
              class: "form-control gold-placeholder",
              style: "background-color: black; color: #ffce1b; border-color: #ffce1b;",
              placeholder: "Enter section name" %>
      </div>

      <div class="mb-3">
        <%= form.label :room, class: "form-label fw-bold", style: "color: #ffce1b;" %>
        <%= form.text_field :room,
              class: "form-control gold-placeholder",
              style: "background-color: black; color: #ffce1b; border-color: #ffce1b;",
              placeholder: "Enter room" %>
      </div>

      <div class="mb-3">
        <%= form.label :time_slot, class: "form-label fw-bold", style: "color: #ffce1b;" %>
        <%= form.text_field :time_slot,
              class: "form-control gold-placeholder",
              style: "background-color: black; color: #ffce1b; border-color: #ffce1b;",
              placeholder: "Enter time slot" %>
      </div>

      <div class="mb-3">
        <%= form.label :subject_id, "Subject", class: "form-label fw-bold", style: "color: #ffce1b;" %>
        <%= form.collection_select :subject_id, Subject.all, :id, :name,
              { prompt: "Select a subject" },
              { class: "form-select", style: "background-color: black; color: #ffce1b; border-color: #ffce1b;" } %>
      </div>

      <div class="action-buttons" style="display: flex; justify-content: flex-end; gap: 10px; margin-top: 20px;">
        <%= form.submit(section.new_record? ? "Create Section" : "Update Section", class: "btn-round-gold") %>
      </div>
    <% end %>
  </div>
</div>
