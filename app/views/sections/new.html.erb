<style>
.page-title {
  background-color: #ffce1b;
  color: #000000;
  padding: 12px 20px;
  font-weight: bold;
}

.btn-gxyy {
  background-color: #ffce1b;
  color: black;
  border: none;
  padding: 12px 25px;
  border-radius: 30px;
  font-size: 18px;
  font-weight: bold;
  box-shadow: 0 4px 10px rgba(0,0,0,0.2);
  transition: all 0.3s ease;
}

.btn-gxyy:hover {
  background-color: black;
  color: #ffce1b;
  transform: scale(1.05);
}

.action-buttons {
  margin-top: 20px;
  display: flex;
  gap: 15px;
  flex-wrap: wrap;
}

<% content_for :title, "New section" %>

<h1 class="page-title text-center" style="background-color: #ffce1b; color: black;">
  NEW SECTION
</h1>

<%= render "form", section: @section %>

<br>

<div class="action-buttons" style="display: flex; justify-content: flex-start; gap: 10px;">
  <%= link_to "Back to sections", sections_path, class: "btn-round-gold" %>
</div>
