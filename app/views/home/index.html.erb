<style>
  .hero-img {
  height: 500px;
  object-fit: cover;
  filter: brightness(60%);
}

.custom-caption h2 {
  font-size: 50px;
  font-weight: 800;
  color: #ffce1b;
  text-shadow: 0 0 12px rgba(255, 215, 0, 0.5);
}

.custom-caption p {
  font-size: 22px;
  color: #ffce1b;
  opacity: 0.9;
}

.carousel-control-prev-icon,
.carousel-control-next-icon {
  filter: invert(95%) sepia(70%) saturate(500%) hue-rotate(360deg);
}

.news-title {
  font-size: 40px;
  font-weight: 800;
  color: #ffce1b;
  margin-bottom: 20px;
  text-shadow: 0 0 8px rgba(255, 215, 0, 0.4);
}

.news-scroll-container {
  display: flex;
  overflow-x: auto;
  gap: 20px;
  padding: 20px 10px;
  scrollbar-width: none;
}

.news-scroll-container::-webkit-scrollbar {
  display: none;
}

.news-box {
  min-width: 280px;
  background: #000;
  border: 2px solid #ffce1b;
  padding: 20px;
  border-radius: 15px;
  color: #ffce1b;
  box-shadow: 0 4px 12px rgba(255, 206, 27, 0.2);
  transition: 0.3s ease;
}

.news-box:hover {
  transform: scale(1.05);
  box-shadow: 0 4px 18px rgba(255, 215, 0, 0.4);
}

.news-box h4 {
  color: #ffd700;
  font-size: 22px;
  font-weight: bold;
  margin-bottom: 10px;
}

.news-box p {
  font-size: 16px;
  opacity: 0.9;
}

body{
    background-color: #000 !important;
    color: #ffce1b;
}
</style>

