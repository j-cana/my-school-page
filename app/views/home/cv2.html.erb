.cv-wrapper {
  max-width: 900px;
  margin: 40px auto;
  background: rgba(0, 0, 0, 0.55);
  border: 2px solid #ffce1b;
  border-radius: 15px;
  padding: 30px;
  color: #ffce1b;
  box-shadow: 0 4px 15px rgba(255, 206, 27, 0.2);
  font-family: 'Poppins', sans-serif;
}

.cv-header {
  display: flex;
  align-items: center;
  gap: 25px;
  padding-bottom: 20px;
  border-bottom: 2px solid #ffce1b;
}

.cv-header img {
  width: 160px;
  height: 160px;
  border-radius: 50%;
  border: 2px solid #ffce1b;
  object-fit: cover;
}

.cv-header h1 {
  font-size: 36px;
  margin: 0;
  font-weight: 700;
}

.cv-header p {
