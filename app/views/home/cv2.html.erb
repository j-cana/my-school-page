  margin: 0;
}

.section-title {
  margin-top: 30px;
  font-size: 22px;
  font-weight: bold;
  border-bottom: 1px solid #ffce1b;
  padding-bottom: 5px;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.cv-list {
  list-style: none;
  padding-left: 0;
  margin-top: 10px;
}

.cv-list li {
  margin-bottom: 5px;
  font-size: 17px;
}

.skill-badge {
  background-color: #ffce1b;
  color: black;
  padding: 6px 12px;
  border-radius: 50px;
  margin: 5px;
  display: inline-block;
  font-weight: bold;
